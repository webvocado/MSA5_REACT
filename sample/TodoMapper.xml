<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!-- namespace="매퍼 인터페이스 경로" --> 
<mapper namespace="com.aloha.sample.mapper.TodoMapper">

    <!-- Todo 목록 조회 -->
    <select id="list" resultType="Todo">
        SELECT *
        FROM todo
        order by status , no desc
    </select>

    <!-- Todo 조회 -->
    <select id="select" resultType="Todo">
        SELECT *
        FROM todo
        WHERE no = #{no}
    </select>

    <!-- Todo 등록 -->
    <!--     
        ⭐AUTO_INCREMENT 값 담기
        1️⃣ useGeneratedKeys : AUTO_INCREMENT 된 값을 KeyProperty 에 지정한 변수에 담기
        2️⃣ selectKey 사용하기
    -->
    <!-- 1️⃣ -->
    <!-- <insert id="insert" useGeneratedKeys="true" keyProperty="no"> -->
    <!-- 2️⃣ -->
    <insert id="insert">
        <selectKey keyProperty="no" resultType="int" order="AFTER">
            SELECT LAST_INSERT_ID() FROM dual
        </selectKey>
        INSERT INTO todo( name, status )
        VALUES ( #{name}, #{status} )
    </insert>

    <!-- Todo 상태 수정 [완료상태 1] -->
    <update id="update">
        UPDATE todo
           SET name = #{name},
               status = #{status}
        WHERE no = #{no}
    </update>

    <!-- Todo 전체 상태 수정 [완료상태 1] -->
    <update id="updateAll">
        UPDATE todo
           SET status = 1
    </update>


    <!-- Todo 삭제 -->
    <delete id="delete">
        DELETE FROM todo
        WHERE no = #{no}
    </delete>

    <!-- Todo 전체 삭제 -->
    <delete id="deleteAll">
        DELETE FROM todo
    </delete>


</mapper>